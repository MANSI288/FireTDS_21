<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TDS Title -->

    <!-- TDS Value -->

    <!-- Insight -->

    <!-- Treatment Detail Button -->

    <!-- Save Button -->

    <TextView
        android:id="@+id/tdsTitleText"
        android:layout_width="161dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"

        android:text="@string/text_TDSvalue"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/tdsValueDisplay"
        android:layout_width="153dp"
        android:layout_height="176dp"
        android:layout_marginTop="80dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="@string/text_TDSvalue"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tdsTitleText"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdsTitleText" />

    <TextView
        android:id="@+id/InsightTextView"
        android:layout_width="156dp"
        android:layout_height="175dp"
        android:layout_marginTop="80dp"
        android:background="@color/grey"
        android:gravity="center"
        android:hint="TDS Insight"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/tdsValueDisplay"
        app:layout_constraintTop_toBottomOf="@+id/tdsTitleText" />

    <Button
        android:id="@+id/treatmentDetailButton"
        android:layout_width="305dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:background="@color/grey"
        android:text="@string/button_TreatmentDetails"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="@+id/saveButton"
        app:layout_constraintTop_toBottomOf="@+id/saveButton" />

    <Button
        android:id="@+id/treatmentIdealButton"
        android:layout_width="305dp"
        android:layout_height="69dp"
        android:layout_marginTop="76dp"
        android:background="@color/grey"
        android:text="@string/text2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/saveButton"
        app:layout_constraintStart_toStartOf="@+id/saveButton"
        app:layout_constraintTop_toBottomOf="@+id/saveButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="296dp"
        android:text="@string/button_SaveData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tdsTitleText" />

</androidx.constraintlayout.widget.ConstraintLayout>
